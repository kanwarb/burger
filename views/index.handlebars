<header class="bg-transparent">
  <h2 class="text-center">Burgers available to eat</h2>
</header>

<div class="container">
 
    <div id="burger-available" class="eat-burger">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-devoured devoured=false}}
      {{/unless}}
      {{/each}}

    </div>
    <div id="burger-form" class="add-burger">
      <form type="form-control">
        <textarea id="add-burger" name="newBurger"></textarea><br>
        <span class="center"><button id="submit" class="bg-info">Submit</button></span>
      </form>
    </div>
    <div id="burger-eaten" class="burger-eaten ">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-devoured devoured=true}}
      {{/if}}
      {{/each}}
    </div>
</div>