
{{#unless devoured}}
<div class="row">
	<div class="col s6"><span class="flow-text">
			<button class="eat-this bg-warning ml-5" data-id="{{id}}" data-devoured="{{devoured}}">
				{{burger_name}}
			</button><br>
		</span>
	</div>
</div>
{{/unless}}

{{#if devoured}}
<div class="row">
	<div class="col s6 offset-s6"><span class="flow-text">
			<button class="already-ate bg-info ml-5" data-id="{{id}}" data-devoured="{{devoured}}">
				{{burger_name}} - Devoured!
			</button>
		</span>
	</div>
</div>
{{/if}}